{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "tsc",
        "outputDirectory": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "build/index.js"
    },
    {
      "src": "/(.*)", 
      "dest": "build/index.js"
    }
  ]
}