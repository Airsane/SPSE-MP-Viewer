<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Website Status Monitor</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #1a2a6c, #b21f1f, #fdbb2d);
            min-height: 100vh;
            padding: 2rem;
        }

        .wrapper {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            padding: 1rem;
        }

        div.url {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        div.url:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

        .url > h2 {
            margin: 0;
            font-size: 1.1rem;
            font-weight: 500;
            flex: 1;
        }

        .url > h2 > a {
            text-decoration: none;
            color: white;
            transition: color 0.3s ease;
        }

        .url > h2 > a:hover {
            color: #fdbb2d;
        }

        div.offline-indicator,
        div.online-indicator {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            position: relative;
            margin-left: 1rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        div.offline-indicator {
            background-color: #ff4757;
            animation: pulse-red 2s infinite;
        }

        div.online-indicator {
            background-color: #2ed573;
        }

        span.blink {
            display: block;
            width: 20px;
            height: 20px;
            background-color: #2ed573;
            opacity: 0.7;
            border-radius: 50%;
            animation: pulse-green 2s infinite;
        }

        @keyframes pulse-green {
            0% {
                transform: scale(1);
                opacity: 0.7;
            }
            70% {
                transform: scale(2);
                opacity: 0;
            }
            100% {
                transform: scale(1);
                opacity: 0;
            }
        }

        @keyframes pulse-red {
            0% {
                transform: scale(1);
                opacity: 0.7;
            }
            50% {
                transform: scale(1.1);
                opacity: 0.4;
            }
            100% {
                transform: scale(1);
                opacity: 0.7;
            }
        }
    </style>
</head>
<body>
<div class="wrapper">
</div>

<script>
    window.addEventListener('load', async () => {
        try {
            const response = await fetch(`<%=url%>api/websites`);
            const websites = await response.json();
            const wrapper = document.querySelector('.wrapper');
            
            websites.forEach(({https, classxD}) => {
                const websiteElement = createWebsiteElement(https, classxD);
                wrapper.appendChild(websiteElement);
            });
        } catch (error) {
            console.error('Failed to load websites:', error);
        }
    });

    const createWebsiteElement = (websiteData, className) => {
        const container = document.createElement('div');
        container.classList.add('url');
        
        const heading = createHeading(websiteData, className);
        const statusIndicator = createStatusIndicator(websiteData._status);
        
        container.append(heading, statusIndicator);
        return container;
    };

    const createHeading = (websiteData, className) => {
        const heading = document.createElement('h2');
        const link = document.createElement('a');
        link.href = websiteData._url;
        link.target = "_blank";
        link.textContent = `${websiteData._url} (${className})`;
        heading.appendChild(link);
        return heading;
    };

    const createStatusIndicator = (isOnline) => {
        const indicator = document.createElement('div');
        indicator.classList.add(isOnline ? 'online-indicator' : 'offline-indicator');
        
        const statusDot = document.createElement('span');
        if (isOnline) {
            statusDot.classList.add('blink');
        }
        indicator.appendChild(statusDot);
        
        return indicator;
    };
</script>

</body>
</html>