<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Website Status Monitor</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #1a2a6c, #b21f1f, #fdbb2d);
            min-height: 100vh;
            padding: 2rem;
        }

        .wrapper {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            padding: 1rem;
        }

        div.url {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        div.url:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

        .url > h2 {
            margin: 0;
            font-size: 1.1rem;
            font-weight: 500;
            flex: 1;
        }

        .url > h2 > a {
            text-decoration: none;
            color: white;
            transition: color 0.3s ease;
        }

        .url > h2 > a:hover {
            color: #fdbb2d;
        }

        div.offline-indicator,
        div.online-indicator {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            position: relative;
            margin-left: 1rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        div.offline-indicator {
            background-color: #ff4757;
            animation: pulse-red 2s infinite;
        }

        div.online-indicator {
            background-color: #2ed573;
        }

        span.blink {
            display: block;
            width: 20px;
            height: 20px;
            background-color: #2ed573;
            opacity: 0.7;
            border-radius: 50%;
            animation: pulse-green 2s infinite;
        }

        @keyframes pulse-green {
            0% {
                transform: scale(1);
                opacity: 0.7;
            }
            70% {
                transform: scale(2);
                opacity: 0;
            }
            100% {
                transform: scale(1);
                opacity: 0;
            }
        }

        @keyframes pulse-red {
            0% {
                transform: scale(1);
                opacity: 0.7;
            }
            50% {
                transform: scale(1.1);
                opacity: 0.4;
            }
            100% {
                transform: scale(1);
                opacity: 0.7;
            }
        }
    </style>
</head>
<body>
<div class="wrapper">
</div>

<script>
    window.addEventListener('load', async () => {
        const data = await (await fetch('http://localhost:3000/api/websites')).json();
        for (const {https, classxD} of data) {
            const div1 = createUrlDiv(https, classxD);
            document.querySelector('.wrapper').appendChild(div1);
        }
    })

    const createUrlDiv = (urlData2, classxD) => {
        const div = document.createElement('div');
        div.classList.add('url');
        createInnerContent(urlData2, div, classxD);
        return div;
    }

    const createInnerContent = (data, div, classxD) => {
        let h2 = document.createElement('h2');
        let a = document.createElement('a');
        a.href = data._url;
        a.target = "_blank";
        a.innerText = data._url + " (" + classxD + ")";
        h2.appendChild(a);
        div.appendChild(h2);
        const indicator = document.createElement('div');
        if (data._status) {
            indicator.classList.add('online-indicator');
            const blink = document.createElement('span');
            blink.classList.add('blink');
            indicator.appendChild(blink);
        } else {
            indicator.classList.add('offline-indicator');
            const span = document.createElement('span');
            indicator.appendChild(span);
        }
        div.appendChild(indicator);
    }
</script>

</body>
</html>